extends blocks/base.jade

block title 
	title Авточехлы - Доставка

block content

	include blocks/header.jade
	
	.wrapper

		.main-sidebar.mobile-hide

			.sidebar

				// sidebar-item
				.sidebar-item
					.sidebar-item_item
						img(src="img/car.svg", alt="car").sidebar-item_icon.sidebar-item_icon--car
						.sidebar-item_text Отправка на следующий день
					.sidebar-item_item
						img(src="img/hand.svg", alt="hand").sidebar-item_icon.sidebar-item_icon--hand
						.sidebar-item_text Цены производителя
				// /sidebar-item

			.main
				
				include blocks/filter.jade

		// delivery
		.delivery
			h1.title Доставка чехлов
			.delivery_row
				.delivery_col
					p.delivery_text Стоимость доставки зависит от способа оплаты заказа.
					.delivery_buttons.delivery_buttons--half
						a(href="#").delivery_btn.js-match-height Наличными при получении
						a(href="#").delivery_btn.js-match-height Банковской картой на сайте
			
			.delivery_row

				.delivery_col
					p.delivery_text.delivery_text--big-mobile Стоимость и сроки доставки
					.delivery_buttons
						a(href="#").delivery_btn.delivery_btn--span.js-match-height В пункт выдачи
							span 345 Р  - 1 день
						a(href="#").delivery_btn.delivery_btn--span.js-match-height Почтой РФ
							span 345 Р  - 1 день
						a(href="#").delivery_btn.delivery_btn--span.js-match-height Курьером
							span 345 Р  - 1 день

				.delivery_col
					p.delivery_text.delivery_text--big-mobile Транспортные компании
					// transport-company
					.transport-company
						a(href="#").transport-company_link
							img(src="img/dpd.jpg", alt="dpd").transport-company_img.transport-company_img--desktop
							img(src="img/dpd-mob.jpg", alt="dpd").transport-company_img.transport-company_img--mobile
						a(href="#").transport-company_link
							img(src="img/boxberry.jpg", alt="dpd").transport-company_img.transport-company_img--desktop
							img(src="img/boxberry-mob.jpg", alt="dpd").transport-company_img.transport-company_img--mobile
						a(href="#").transport-company_link
							img(src="img/iml.jpg", alt="dpd").transport-company_img.transport-company_img--desktop
							img(src="img/iml-mob.jpg", alt="dpd").transport-company_img.transport-company_img--mobile
						a(href="#").transport-company_link
							img(src="img/pec.jpg", alt="dpd").transport-company_img.transport-company_img--desktop
							img(src="img/pec-mob.jpg", alt="dpd").transport-company_img.transport-company_img--mobile
						a(href="#").transport-company_link
							img(src="img/cdek.jpg", alt="dpd").transport-company_img.transport-company_img--desktop
							img(src="img/cdek-mob.jpg", alt="dpd").transport-company_img.transport-company_img--mobile
					// /transport-company
		// /delivery

		.title Пункты выдачи в Москве

		// contacts-map
		.contacts-map
			.contacts-map_map
				iframe(src="https://yandex.ru/map-widget/v1/?ll=37.624513%2C55.748635&z=12" width="100%" height="100%" frameborder="1" allowfullscreen="true")
